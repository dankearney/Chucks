extends layout

block content
    table.table-full-width
      tbody
        each beer in beers
          tr
            td
              .squaredFour
                input(type='checkbox', value='None', name='check', id='#{beer.name}')
                label(for='#{beer.name}')
            td=beer.index
            td
              if beer.type == 'ipa' 
                b #{beer.brewery} #{beer.name}
              else if beer.type == 'cider'
                b
                  em #{beer.brewery} #{beer.name}
              else
                span #{beer.brewery} #{beer.name}
              td #{beer.abv}%